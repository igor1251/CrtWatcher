@model UsersViewModel
@{
    ViewData["Title"] = "Пользователи";
}

<div>
    <fieldset>
        <legend>Зарегистрированные пользователи</legend>
        <table class="table table-hover table-sm table-stripped">
            <thead class="thead-dark">
                <tr>
                    <th>Имя</th>
                    <th>Номер телефона</th>
                    <th>Комментарий</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in @Model.AvailableUsers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.UserPhone</td>
                        <td>@user.UserComment</td>
                        <td>
                            <a asp-controller="Users" asp-action="Details" asp-route-id=@user.ID>Смотреть</a> | 
                            <a asp-controller="Users" asp-action="Delete" asp-route-id=@user.ID>Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</div>
