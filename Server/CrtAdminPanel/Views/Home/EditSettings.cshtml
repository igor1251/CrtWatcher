@model CrtAdminPanel.Models.Classes.Settings
@{
    ViewData["Title"] = "Edit settings";
}

<div class="text-center">
    <h2>Config set up</h2>
</div>

<form asp-action="EditSettings" asp-controller="Home">
    <div class="form-group">
        <dl class="dl-horizontal">
            <dd><label>WarnDaysCount</label></dd>
            <dd><input asp-for="WarnDaysCount" class="form-control" /></dd>
        </dl>
    </div>

    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
</form>


