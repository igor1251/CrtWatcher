@model CrtAdminPanel.Models.Classes.Certificate
@{
    ViewData["Title"] = "Edit certificate";
}

<div class="text-center">
    <h2>Edit certificate</h2>
</div>

<form asp-antiforgery="true" asp-action="EditCertificate" asp-controller="Home">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly" class="text-danger" ></div>
        <div class="form-group">
            <dl class="dl-horizontal">
                <dt>Subject name</dt>
                <dd>
                    @Model.HolderFIO
                </dd>
 
                <dt><label>Phone number</label></dt>
                <dd>
                    <input asp-for="HolderPhone"/>
                    <span asp-validation-for="HolderPhone" class="text-danger" ></span>
                </dd>

                <dt>Certificate start date</dt>
                <dd>
                    @Model.CertStartDateTime
                </dd>

                <dt>Certificate end date</dt>
                <dd>
                    @Model.CertEndDateTime
                </dd>
            </dl>

            <input type="submit" value="Confirm" class="btn btn-primary" />
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}