@model CrtAdminPanel.Models.Classes.Certificate
@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="text-center">
        <h2>Certificate information</h2>
    </div>
    <dl class="dl-horizontal">
        <dt>Subject name</dt>
        <dd>
            @Model.HolderFIO
        </dd>
 
        <dt>Phone number</dt>
        <dd>
            @Model.HolderPhone
        </dd>

        <dt>Certificate start date</dt>
        <dd>
            @Model.CertStartDateTime
        </dd>

        <dt>Certificate end date</dt>
        <dd>
            @Model.CertEndDateTime
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Home" asp-action="DeleteCertificate" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Confirm delete" />
            </div>
        </form>
    </div>
</div>
