@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div>
    <fieldset>
        <legend>User details</legend>
        <form method="post" asp-controller="Users" asp-action="UserEdit">
            <table class="table table-hover table-sm table-stripped">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <input type="hidden" asp-for="User.ID" />
                        <td>
                            <input asp-for="User.UserName" readonly="readonly" />
                        </td>
                        <td>
                            <input asp-for="User.UserPhone" />
                        </td>
                        <td>
                            <input asp-for="User.UserComment" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="submit" class="btn btn-primary" value="Save" />
        </form>

        <br />

        <table class="table table-hover table-sm table-stripped">
             <thead class="thead-dark">
                 <tr>
                     <th>Hash</th>
                     <th>Algorithm</th>
                     <th>Start date</th>
                     <th>End date</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var item in @Model.User.CertificateList)
                {
                    <tr>
                        <td>@item.CertificateHash</td>
                        <td>@item.Algorithm</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</div>
