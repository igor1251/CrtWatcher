@model UsersViewModel
@{
    ViewData["Title"] = "Users";
}

<div>
    <fieldset>
        <legend>Registered users</legend>
        <table class="table table-hover table-sm table-stripped">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Comment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in @Model.AvailableUsers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.UserPhone</td>
                        <td>@user.UserComment</td>
                        <td>
                            <a asp-controller="Users" asp-action="Details" asp-route-id=@user.ID>Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</div>
